<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Ladybird Foundation</title>

    <!-- CSS Links -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WIL_V1.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/custom-styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">

    <!-- Inline CSS for footer positioning and navigation styling -->
    <style>
        html, body {
            height: 100%;
            margin: 0;
            font-family: 'Candara', sans-serif;
        }

        body {
            display: flex;
            flex-direction: column;
        }

        .container {
            flex: 1;
        }

        .footer {
            background-color: #000;
            color: #fff;
            text-align: center;
            padding: 10px;
        }

        .navbar {
            background-color: rgba(255, 255, 255, 0.7);
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .navbar-nav .nav-link {
            color: #000;
            font-size: 16px;
            font-weight: 500;
            padding: 10px 20px;
            transition: color 0.3s, background-color 0.3s;
        }

            .navbar-nav .nav-link:hover {
                color: #fff;
                background-color: #d9534f;
                border-radius: 4px;
            }

        .navbar-toggler {
            border: none;
        }

            .navbar-toggler:focus {
                outline: none;
                box-shadow: none;
            }

        .navbar-brand {
            font-size: 20px;
            font-weight: bold;
            color: #000;
        }

        /* Center the nav links */
        .navbar-collapse {
            justify-content: center; /* Center the links */
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navbar content inside a collapse for better responsiveness -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Events" asp-action="Index">Events</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="AboutUs" asp-action="Index">About Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Donation" asp-action="Index">Donation</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Locations" asp-action="Index">Locations</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted">
        <div class="container" style="font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif">
            | Contact us : | <img src="~/images/phone_icon.png" style="width: 25px; height: auto;" /> +27 79 076 2234 | Michelle |
            <a href="https://popia.co.za/" target="_blank" style="color:WHITE; text-decoration: underline;">POPIA</a>
        </div>
    </footer>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.10.2/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <!-- Optional JavaScript to manage colors dynamically -->
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var currentPath = window.location.pathname;
            var navLinks = document.querySelectorAll(".navbar-nav .nav-link");

            navLinks.forEach(link => {
                if (currentPath !== '/' && currentPath !== '/Home/Index') {
                    link.style.color = "black";
                } else {
                    link.style.color = "black";
                }
            });
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
